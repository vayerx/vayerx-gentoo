# Defaults
pcm.!default {
    type plug
    slave.pcm combined
}

ctl.!default {
    type hw
    card 0
}

# Equalizer
pcm.equalized_output {
    type plug
    slave.pcm equal
}

pcm.equal {
    type equal
    slave.pcm plugged_output
}

ctl.equal {
    type equal
}

# ALC236
pcm.ALC236_out {
    type hw
    card 0
    format S32_LE
    rate 48000
}

pcm.ALC236_mic {
    type hw
    card 0
    rate 48000
    format S32_LE
}

# Output
pcm.plugged_output {
    type plug
    slave.pcm dmixed_output
}

pcm.dmixed_output {
    type dmix

    ipc_key 142831
    ipc_perm 0666
    ipc_gid audio

    slave {
        pcm ALC236_out
        channels 2

        period_size 1024
        buffer_size 65536
    }
}

# Input
pcm.dsnooped_input {
    type dsnoop

    ipc_key 142832
    ipc_perm 0666
    ipc_gid audio

    slave.pcm ALC236_mic
}

# Full-duplex device
pcm.combined {
    type asym

    playback.pcm equalized_output
    capture.pcm dsnooped_input
}
